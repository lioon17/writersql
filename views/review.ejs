<script>
    document.addEventListener('DOMContentLoaded', function () {
    const pageLinks = document.querySelectorAll('.page-link');
    const reviewPages = document.querySelectorAll('.review-page');

    pageLinks.forEach(link => {
        link.addEventListener('click', function () {
            const page = this.getAttribute('data-page');

            // Hide all review pages
            reviewPages.forEach(page => page.style.display = 'none');

            // Show the selected review page
            document.getElementById(`page-${page}`).style.display = 'block'; 

            // Update active class on pagination links
            pageLinks.forEach(link => link.classList.remove('active'));
            this.classList.add('active');
        });
    });
});
 
 // Show the review form when the "Write a review" button is clicked
 document.querySelector('.write-review').addEventListener('click', function () {
        document.querySelector('.review-form-container').style.display = 'block';
    });

    // Handle star rating clicks
    document.querySelectorAll('.star').forEach(star => {
        star.addEventListener('click', function () {
            const value = this.getAttribute('data-value');
            document.getElementById('rating').value = value;
            document.querySelectorAll('.star').forEach(s => {
                s.classList.remove('selected');
                if (s.getAttribute('data-value') <= value) {
                    s.classList.add('selected');
                }
            });
        });
    });

    document.getElementById('reviewForm').addEventListener('submit', function (e) {
    e.preventDefault();
    const formData = new FormData(this);

    fetch('/submit-review', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            name: formData.get('name'), // Correct field names
            location: formData.get('location'),
            rating: formData.get('rating'),
            review: formData.get('review') // Correct field names
        })
    })
    .then(response => response.text())
    .then(data => {
        alert('Review submitted successfully!');
        this.reset();
        document.querySelector('.review-form-container').style.display = 'none';
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to submit review.');
    });
});

</script>

