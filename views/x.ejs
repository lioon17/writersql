    incrementButton.addEventListener('click', function() {
        pageCountInput.value = parseInt(pageCountInput.value) + 1;
        updateTotalPrice();
    });

    decrementButton.addEventListener('click', function() {
        if (parseInt(pageCountInput.value) > 1) {
            pageCountInput.value = parseInt(pageCountInput.value) - 1;
            updateTotalPrice();
        }
    });

